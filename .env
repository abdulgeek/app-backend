# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/todolist?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secret for Authentication (if needed in future)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_min_32_chars

# CORS Configuration
FRONTEND_URL=https://your-app-name.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Logging
LOG_LEVEL=info